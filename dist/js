let pokemonRepository=function(){let e=[];function t(t){"object"==typeof t&&"name"in t?e.push(t):console.log("pokemon is not correct")}function n(e){pokemonRepository.loadDetails(e).then((function(){!function(e){let t=$(".modal-body"),n=$(".modal-title");n.empty(),t.empty();let o=$("<h1>"+e.name+"</h1>"),l=$('<img class="modal-img" style="width:50%"> alt=""');l.attr("src",e.imageUrl);let i=$("<p>Height : "+e.height+" m</p>"),c=$("<p>Weight : "+e.weight+" kg</p>");n.append(o),t.append(l),t.append(i),t.append(c),$("#exampleModalLive").modal()}(e)}))}let o=document.getElementById("btn-back-to-top");return window.onscroll=function(){document.body.scrollTop>20||document.documentElement.scrollTop>20?o.style.display="block":o.style.display="none"},o.addEventListener("click",(function(){document.body.scrollTop=0,document.documentElement.scrollTop=0})),{add:t,getAll:function(){return e},addListItem:function(e){let t=document.querySelector(".pokemon-list"),o=document.createElement("li"),l=document.createElement("div"),i=document.createElement("button");var c;i.innerText=e.name,l.classList.add("poke-button"),i.classList.add("name"),l.appendChild(i),o.appendChild(l),t.appendChild(o),c=e,i.addEventListener("click",(function(){n(c)}))},loadList:function(){return fetch("https://pokeapi.co/api/v2/pokemon/?limit=150").then((function(e){return e.json()})).then((function(e){e.results.forEach((function(e){t({name:e.name,detailsUrl:e.url})}))}))},loadDetails:function(e){let t=e.detailsUrl;return fetch(t).then((function(e){return e.json()})).then((function(t){e.imageUrl=t.sprites.front_default,e.height=t.height,e.weight=t.weight,e.types=t.types})).catch((function(e){console.error(e)}))},showDetails:n}}();pokemonRepository.loadList().then((function(){pokemonRepository.getAll().forEach((function(e){pokemonRepository.addListItem(e)}))}));let pokemonSearchBar=document.querySelector("#myInput");pokemonSearchBar.addEventListener("input",(function(){let e=document.querySelectorAll("li"),t=pokem